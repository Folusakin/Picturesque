<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcometext"
        android:layout_width="199dp"
        android:layout_height="52dp"

        android:layout_marginTop="37dp"
        android:layout_marginBottom="53dp"
        android:ems="10"
        android:fontFamily="@font/advent_pro_semibold"
        android:inputType="textPersonName"
        android:text="Picturesque"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.764"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/findDupes"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_marginBottom="47dp"
        android:text="Find Duplicates"
        app:layout_constraintBottom_toTopOf="@+id/viewcloudimgs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/upload"
        android:layout_width="190dp"
        android:layout_height="0dp"
        android:layout_marginBottom="41dp"
        android:text="Upload Image"
        app:layout_constraintBottom_toTopOf="@+id/findDupes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcometext" />

    <Button
        android:id="@+id/logout"
        android:layout_width="190dp"
        android:layout_height="0dp"
        android:layout_marginBottom="74dp"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewcloudimgs" />

    <Button
        android:id="@+id/viewcloudimgs"
        android:layout_width="190dp"
        android:layout_height="0dp"
        android:layout_marginBottom="45dp"
        android:text="Firebase Images"
        app:layout_constraintBottom_toTopOf="@+id/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/findDupes" />
</androidx.constraintlayout.widget.ConstraintLayout>